/* pages/toolPage/tool.wxss */
page,.container{
  width: 100%;
  height: 100%;
}
.padShow{
  height: 40%;
  width: 100%;
}

.padShow image{
  width: 100%;
  height: 100%;
  border-radius: 50px 50px 10px 10px;
}
.onUse{
  width: 100%;
  height: 30%;
}
.bar{
  width: 40%;
  height: 20px;
  padding: 2px;
  background-color: cornsilk;
  text-align: center;
}
.eachFun{
  width: 100%;
  height: calc(100% - 20px);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.tool{
  width: 27%;
  height: 60px;
  background-color:#f2ecde;
  text-align: center;
  border-radius: 10px;
}
.toolImg{
  height: 30px;
}
.toolText{
  display: block;
  font-size: small;
}

.bottom{
  position: fixed;
  bottom: 10px;
  width: 86%;
  height: 6%;
  left: 7%;
  background-color: black;
  border-radius: 10px;
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  align-items: stretch;
}
.threeItem{
  height: 100%;
  width: 30%;
  display: flex;
  align-content: space-between;
  justify-content: center;
  margin:  0 auto;
}
.threeItem image{
  height: 80%;
  width: 40%;
}
.gray{
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}