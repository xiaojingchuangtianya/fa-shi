page .container{
    width: 100%;
    height: 100%;
    text-align: center;
}
.mainContent{
  filter: blur(0.5px);
}
image{
    width: 100%;
    margin-bottom: 5px;
}

.listShow{
    background-color: #CCFF99;
    width: 20px;
    height: 50px;
    top: calc(50% - 25px);
    position: fixed;
    z-index: 999;
}
text{
    display: inline-flex;
}
.listShow image{
    width: 24px;
    height: 80px;
    left: 10px;
    position: fixed;
    top: calc( 50% - 40px);
}
.typeItems{
  height: 90%;
}
.itemT{
  border-bottom: dashed 0.5px black;
  padding: 2px;
}
.itemClick{
  background-color: #f8c67a;
}
/* 拉出来后的样式 */
.showList{
  position: fixed;
  width: 60%;
  height: 100%;
  left: -60%;
  background-color: blanchedalmond;
  z-index: 400;
  font-weight: bolder;
}

.hideList{
  position: fixed;
  width: 20px;
  height: 50px;
  background-color: #eeb173;
  left: calc(100% - 20px);
  top: calc(50% - 25px);
  z-index: 999;
  font-weight: bolder;
}
.hideList image{
  height: 80px;
  position: absolute;
  right: 14px;
  top:-15px;
}
.navBar{
  width: 100%;
  height: 5%;
  background-color: #cccc99;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: larger;
  font-weight: bold;
}

.bottom{
    position: fixed;
    bottom: 10px;
    width: 86%;
    height: 6%;
    left: 7%;
    background-color: black;
    border-radius: 10px;
    display: flex;
    justify-content: space-evenly;
    text-align: center;
    align-items: stretch;
  }
  .threeItem{
    height: 100%;
    width: 30%;
    display: flex;
    align-content: space-between;
    justify-content: center;
    margin:  0 auto;
  }
  .threeItem image{
    height: 80%;
    width: 40%;
  }
  .gray{
    -webkit-filter: grayscale(100%);
    -moz-filter: grayscale(100%);
    -ms-filter: grayscale(100%);
    -o-filter: grayscale(100%);
    filter: grayscale(100%);
    filter: gray;
  }