.itemT{
  border-bottom: dashed 0.5px black;
  padding: 2px;
}
.itemClick{
  background-color: #f8c67a;
}
/* 拉出来后的样式 */
.showList{
  position: fixed;
  width: 60%;
  height: 100%;
  left: -60%;
  background-color: blanchedalmond;
  z-index: 400;
  font-weight: bolder;
}

.hideList{
  position: fixed;
  width: 20px;
  height: 50px;
  background-color: #eeb173;
  left: calc(100% - 20px);
  top: calc(50% - 25px);
  z-index: 999;
  font-weight: bolder;
}
.hideList image{
  height: 80px;
  position: absolute;
  right: 14px;
  top:-15px;
}
.navBar{
  width: 100%;
  height: 5%;
  background-color: #cccc99;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: larger;
  font-weight: bold;
}

