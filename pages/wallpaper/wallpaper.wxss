page .container{
    width: 100%;
    height: 100%;
    text-align: center;
}
.mainContent{
  filter: blur(0.5px);
}
image{
    width: 100%;
    margin-bottom: 5px;
}

.listShow{
    background-color: #CCFF99;
    width: 20px;
    height: 50px;
    top: calc(50% - 25px);
    position: fixed;
    z-index: 999;
}
text{
    display: inline-flex;
}
.listShow image{
    width: 24px;
    height: 80px;
    left: 10px;
    position: fixed;
    top: calc( 50% - 40px);
}
.typeItems{
  height: 90%;
}
