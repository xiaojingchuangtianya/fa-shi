page,.container,.mainContent{
  width: 100%;
  height: 100%;
}
.mainContent .img{
  width: 100%;
  height: 65%;
  text-align: center;
}
.img image{
  height: 100%;
}
#saveImg{
  background-color: rgb(69, 161, 236);
  border-radius: 10px;
  border: rgb(41, 146, 216) 2px solid;
}
.clickDown{
  margin-top: 10px;
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: end;
}
.clickDown .heart{
  height: 100%;
}
.bottom{
  position: fixed;
  bottom: 10px;
  width: 86%;
  height: 6%;
  left: 7%;
  background-color: black;
  border-radius: 10px;
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  align-items: stretch;
}
.threeItem{
  height: 100%;
  width: 30%;
  display: flex;
  align-content: space-between;
  justify-content: center;
  margin:  0 auto;
}
.threeItem image{
  height: 80%;
  width: 40%;
}
.gray{
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}