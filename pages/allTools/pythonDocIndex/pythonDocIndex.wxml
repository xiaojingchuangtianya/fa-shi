<view class="container" bindtouchstart="touchstart" bindtouchend="touchend">
  <view class="head"> 
  <image src="/images/backgroud.jpg" mode="aspectFill">
  </image>
    <view class="search">
      <view class="glass">
        <input type="text" placeholder="{{placeHolder}}" placeholder-class="placeholder"  bindfocus="inputFocus" bindblur="inputBlur"></input>
        <image src="/images/search.png"></image>
      </view>
    </view>
  </view>

  <!-- 滑动条的位置 -->
  <view class="oneSlide">
  <!-- 滑动块 -->
    <view class="Block {{ slideStyle }}">
    {{slideText[nowPage-1]}}
    </view>
  </view>
  <view class="mainContent ">
    <scroll-view  class=" showContent one {{pageOneindex}}" scroll-y="true" enable-flex="true" bindscrolltolower="addMore" data-type="builtIn">
      <view class="box" wx:for="{{builtIn}}" >
        <image src="{{item.img}}">
        </image>
        {{item.name}}
      </view>

    </scroll-view>
    <scrool-view  class="showContent two {{pageTwoindex}}" scroll-y="true" enable-flex="true" bindscrolltolower="addMore" data-type="builtIn">
      <view class="box">
      </view>
    </scrool-view>
    <scrool-view  class="showContent three {{pageThreeindex}}" scroll-y="true" enable-flex="true" bindscrolltolower="addMore" data-type="builtIn">
      <view class="box">
      </view>
    </scrool-view>
  </view>

</view>