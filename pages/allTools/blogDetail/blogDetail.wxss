@import '/towxml/style/main.wxss';
@import '/towxml/style/theme/dark.wxss';
@import '/towxml/style/theme/light.wxss';

page,.container{
  width: 100%;
  height: 100%;
  padding: 0;
}

.icon image{
  width: 30%;
  height: 40%;
}
.onlook{
  background: darkgray !important;
}
.mainContent{
  height: 80%;
  width: 100%;
}
.title{
  width: 100%;
  font-size: large;
  text-align: center;
  font-weight: bolder;
  background-color: cadetblue;
}
.mainText{
  height: 95%;
}
.mainText img{
  width: 100%;
  height: auto;
  display: block;
}
.xScroll{
  background-color: rgb(223, 145, 72);
  display: inline-block;
  white-space:pre-wrap;
  overflow:hidden;
  width: 100%;
}
.right-Pannel{
  text-align: right;
}
.mes{
  height: 10%;
  bottom: 10%;
  position: absolute;
  right: 10px;
  font-size: xx-small;
}
