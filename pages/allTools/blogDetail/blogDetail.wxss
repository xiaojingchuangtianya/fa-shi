/* pages/blogIndex/blogIndex.wxss */

page,.container{
  width: 100%;
  height: 100%;
  padding: 0;
}

.icon image{
  width: 30%;
  height: 40%;
}
.onlook{
  background: darkgray !important;
}
.mainContent{
  height: 80%;
  width: 100%;
}
.title{
  width: 100%;
  font-size: large;
  text-align: center;
  font-weight: bolder;
  background-color: cadetblue;
}
.mainText{
  height: 95%;
}
.mainText img{
  width: 100%;
  height: auto;
  display: block;
}
.xScroll{
  background-color: rgb(223, 145, 72);
  display: inline-block;
  white-space:pre-wrap;
  overflow:hidden;
  width: 100%;
}
.right-Pannel{
  text-align: right;
}
.mes{
  height: 10%;
  bottom: 10%;
  position: absolute;
  right: 10px;
  font-size: xx-small;
}
.bottom{
  position: fixed;
  bottom: 10px;
  width: 86%;
  height: 6%;
  left: 7%;
  background-color: black;
  border-radius: 10px;
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  align-items: stretch;
}
.threeItem{
  height: 100%;
  width: 30%;
  display: flex;
  align-content: space-between;
  justify-content: center;
  margin:  0 auto;
}
.threeItem image{
  height: 80%;
  width: 40%;
}
.gray{
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}