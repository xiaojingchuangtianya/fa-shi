/* pages/myMes/myMes.wxss */

page,.Ncontainer{
  width: 100%;
  height: 100%;
}
.mainContent{
  background-color: #cce0da;
  height: 30%;
  width: 100%;
  display: flex;
  text-align: center;
  flex-wrap: wrap;
  align-items: center;
}
.mainContent view.image{
  height: 60%;
}
.mainContent view{
  width: 100%;
  font-size: larger;
  font-weight: bold;
}
.mainContent .headImg{
  height: 100%;
  width: auto;
  border-radius: 20%;
}

.tapPan{
  height: 50px;
  width:100%;
  display: flex;
  justify-content: space-between;

}
.line{
  width: 100%;
  height: 100%;
  padding: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:2px solid rgb(154, 119, 39) ;
}
.tapPan .icon{
  width: 40px;
  height: 40px;
  padding-left: 10px;
}
.tapPan .arrow{
  width: 32px;
  height: 32px;
  padding-right: 10px;
}


.bottom{
  position: fixed;
  bottom: 10px;
  width: 86%;
  height: 6%;
  left: 7%;
  background-color: black;
  border-radius: 10px;
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  align-items: stretch;
}
.threeItem{
  height: 100%;
  width: 30%;
  display: flex;
  align-content: space-between;
  justify-content: center;
  margin:  0 auto;
}
.threeItem image{
  height: 80%;
  width: 40%;
}
.gray{
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}