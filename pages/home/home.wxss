/* pages/home/home.wxss */
page ,.container{
  width: 100%;
  height: 100%;
}
.head{
  height: 30%;
}
.head image{
  width: 100%;
  height: 100%;
}

.mainContent{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.mainContent .toolItem{
  width: 30%;
  height: 150rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.mainContent .icon{
  height: 70rpx;
}
.icon image{
  width: 70rpx;
  height: 70rpx;
}
.bottom{
  position: fixed;
  bottom: 10px;
  width: 86%;
  height: 6%;
  left: 7%;
  background-color: black;
  border-radius: 10px;
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  align-items: stretch;
}
.threeItem{
  height: 100%;
  width: 30%;
  display: flex;
  align-content: space-between;
  justify-content: center;
  margin:  0 auto;
}
.threeItem image{
  height: 80%;
  width: 40%;
}
.gray{
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}