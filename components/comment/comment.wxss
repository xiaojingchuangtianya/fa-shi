.allComs{
    width: 70%;
    height: 68%;
    background-color:#eece88;
    position: absolute;
    right: 0;
    top: 10%;
    padding-top: 10px;
    padding-left: 5px;
}
.showCom{

}
.hideCom{
    transform: translateX(-70%);
}
.allComs .comment{
    white-space:pre-line;
    font-size: small;
}
.allComs .comTime{
    display: flex;
    flex-direction: row-reverse;
    font-size: xx-small;
}

.comHead{
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 20px;
    width: 4em;
    position: absolute;
    right: calc(70% - 4em );
    top: calc(10% - 10px);
    z-index: 10;
    font-weight: bold;
    font-size: large;
    color: black;
    opacity: 1;
    background-color: #FFBF00;
}
.showHide{
    font-weight: bold;
    width: 1.5em;
    text-align: center;
    height: 3em;
    background-color: #D0FA58;
    position: fixed;
    right: 0;
    top: 44%;
    z-index: 11;
}
.hideShow{
    font-weight: bold;
    width: 1.5em;
    text-align: center;
    height: 3em;
    background-color: #D0FA58;
    position: fixed;
    right:70%;
    top: 44%;
    z-index: 11;
}

/* 藏起动画 */
@keyframes hideComs{
    0%   {
        width: 70%;
        height: 68%;
        background-color:#eece88;
        position: absolute;
        right: 0;
        top: 10%;
        padding-top: 10px;
        padding-left: 5px;
    }
    25%{
        width: 70%;
        height: 68%;
        background-color:#eece88;
        position: absolute;
        right: -25%;
        top: 10%;
        padding-top: 10px;
        padding-left: 5px;
    }
    50%{
        width: 70%;
        height: 68%;
        background-color:#eece88;
        position: absolute;
        right: -50%;
        top: 10%;
        padding-top: 10px;
        padding-left: 5px;
    }
    75%{
        width: 70%;
        height: 68%;
        background-color:#eece88;
        position: absolute;
        right: -75%;
        top: 10%;
        padding-top: 10px;
        padding-left: 5px;
    }
    100%{
        width: 70%;
        height: 68%;
        background-color:#eece88;
        position: absolute;
        right: -100%;
        top: 10%;
        padding-top: 10px;
        padding-left: 5px;
    }
  }
